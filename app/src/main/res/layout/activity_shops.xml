<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.all_organization.ShopsActivity">

    <ScrollView
        android:id="@+id/myview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp"
            android:orientation="vertical">

            <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:columnCount="2"
                app:orientation="horizontal">

                <Button
                    android:id="@+id/btn_sale"
                    style="@style/services_button_two"
                    android:drawableTop="@drawable/sale"
                    android:onClick="btnSale"
                    android:text="Акции"
                    app:layout_columnWeight="1" />

                <Button
                    android:id="@+id/btn_cheaper"
                    style="@style/services_button_two"
                    android:drawableTop="@drawable/ic_cheaper_48dp"
                    android:onClick="btnCheaper"
                    android:text="Где дешевле?"
                    app:layout_columnWeight="1" />



            </android.support.v7.widget.GridLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>