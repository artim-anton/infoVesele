<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.artimanton.infovesele.activity.Transport"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_to_zp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="На Запорожье"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_time_go_add"
            android:inputType="text"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:30"/>
        <EditText
            android:id="@+id/et_time_finish_add"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="7:30"/>
        <EditText
            android:id="@+id/et_phone_add"
            android:inputType="phone"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPhone"
            android:text="0675932639"/>

    </LinearLayout>

    <Button
        android:id="@+id/btAddBus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить запись" />


</LinearLayout>