<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AllEducationInstitutionActivity"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/myview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/all_organization_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:columnCount="2"
                app:orientation="horizontal">

                <Button
                    android:id="@+id/btn_first_school"
                    style="@style/services_button_two"
                    android:drawableTop="@drawable/ic_school_48dp"
                    android:onClick="btnFirstSchool"
                    android:text="1 школа"
                    app:layout_columnWeight="1" />

                <Button
                    android:id="@+id/btn_second_school"
                    style="@style/services_button_two"
                    android:drawableTop="@drawable/ic_school_48dp"
                    android:onClick="btnSecondSchool"
                    android:text="2 школа"
                    app:layout_columnWeight="1" />

                <Button
                    android:id="@+id/btn_gymnasium"
                    style="@style/services_button_two"
                    android:drawableTop="@drawable/ic_gymnacium_48dp"
                    android:onClick="btnGymnasium"
                    android:text="Гимназия"
                    app:layout_columnWeight="1" />

                <Button
                    android:id="@+id/btn_lyceum"
                    style="@style/services_button_two"
                    android:drawableTop="@drawable/ic_lyceum_48dp"
                    android:onClick="btnLyceum"
                    android:text="Лицей"
                    app:layout_columnWeight="1" />


            </android.support.v7.widget.GridLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>