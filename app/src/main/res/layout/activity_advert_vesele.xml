<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AdvertVeseleActivity">

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_to_zp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Обьявления"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_time_go_add"
            android:inputType="text"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:30"/>
        <EditText
            android:id="@+id/et_time_finish_add"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="7:30"/>
        <EditText
            android:id="@+id/et_phone_add"
            android:inputType="phone"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPhone"
            android:text="0675932639"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_add_advert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/border"
        android:drawableLeft="@drawable/ic_record_voice_over_active_24dp"
        android:gravity="center|center_vertical"
        android:onClick="btnAddAdvert"
        android:paddingLeft="10dp"
        android:text="Добавить обьявление"
        android:textSize="24sp"
        android:textStyle="italic" />

  </LinearLayout>

    <include layout="@layout/bottom_navigation_view"/>

</android.support.constraint.ConstraintLayout>