<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BusMelitopolRead">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_to_melitopol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="На Мелитополь" />

        <Button
            android:id="@+id/btn_push_to_server"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_margin="5dp"
            android:gravity="end"
            android:onClick="pushToServer"
            android:text="Сохранить" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bus_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/view_item">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>