                android:text=""
                android:textColor="@color/colorTime"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_phone__zp_read_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4"
                android:enabled="false"
                android:inputType="phone"
                android:text="0674184728"
                android:textColor="@color/colorPhone"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btn_call__zp_read_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1.2"
                android:onClick="btnCallZpReadTwo"
                android:background="@drawable/border"
                android:src="@drawable/ic_call_black_24dp"
                android:text="CL"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">

            <EditText
                android:id="@+id/et_time_go_zp_read_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:enabled="false"
                android:inputType="text"
                android:text="12:30"
