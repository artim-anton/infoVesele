<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.artimanton.infovesele">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Transport" />
        <activity
            android:name=".activity.Train"
            android:label="@string/title_activity_train"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.BusAdd"
            android:label="@string/title_activity_tr_bus"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".RemoteConfig" />
        <activity
            android:name=".activity.BusZpRead"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.BusMelitopolRead"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.BusZpReadBack"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".activity.BusMelitopolReadBack"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".activity.BusCity" />
        <activity
            android:name=".activity.TaxiRead"
            android:windowSoftInputMode="stateHidden"/>

    </application>

</manifest>